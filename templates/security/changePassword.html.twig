{% extends 'layout.html.twig' %}

{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{% block body %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}


    <div class="container">
        <div class="row">
            <div class="col-12 resetPassword text-center">
                {{ form_start(form) }}
                {{ form_widget (form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
