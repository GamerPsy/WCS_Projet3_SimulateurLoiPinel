{% extends 'layout.html.twig' %}

{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{% block body %}
    <h1 class="bg-primary">Etat civil</h1>
    <div class="container">
        <div class="row">
            <div class="col-12">
                {{ form_start(form) }}

                {{ form_row ( form.civility ) }}

                {{ form_row ( form.lastName ) }}

                {{ form_row ( form.firstName ) }}

                {{ form_row ( form.customerAddress ) }}

                {{ form_row ( form.customerZipCode) }}

                {{ form_row ( form.customerCity) }}

                <div class="text-center"><button type="submit" class="btn btn-primary">Suivant</button></div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}{% endblock %}
