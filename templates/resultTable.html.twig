<div class="container">
    <table class="table">

        <tr>
            <td>
                <p>Nom :</p>
            </td>
            <td>
                <p>{{ app.session.get('civilStatus').lastName }}</p>
            </td>
        </tr>

        <tr>
            <td>
                <p>Prénom :</p>
            </td>
            <td>
                <p>{{ app.session.get('civilStatus').firstName }}</p>
            </td>
        </tr>

        <tr>
            <td>
                <p>Adresse :</p>
            </td>
            <td>
                <p>{{ app.session.get('civilStatus').customerAddress }}</p>
            </td>
        </tr>

        <tr>
            <td>
                <p>Code postal :</p>
            </td>
            <td>
                <p>{{ app.session.get('finance').zipCode }}</p>
            </td>
        </tr>

        <tr>
            <td>
                <p>Ville :</p>
            </td>
            <td>
                <p>{{ app.session.get('finance').city }}</p>
            </td>
        </tr>

        <tr>
            <td class="bg-secondary highlight">
                <p>Zone :</p>
            </td>
            <td class="bg-secondary highlight">
                <p>{{ app.session.get('finance').zone }}</p>
            </td>
        </tr>

        <tr>
            <td>
                <p>Année d'acquisition :</p>
            </td>
            <td>
                <p>{{app.session.get('finance').acquisitionDate|date('d/m/Y') }}</p>
            </td>
        </tr>

        <tr>
            <td class="bg-secondary highlight">
                <p>Durée :</p>
            </td>
            <td class="bg-secondary highlight">
                <p>{{ app.session.get('finance').duration }} ans</p>
            </td>
        </tr>

        <tr>
            <td>
                <p>Surface :</p>
            </td>
            <td>
                <p>{{ app.session.get('finance').surfaceArea|number_format(2, ',', ' ') }} m2</p>
            </td>
        </tr>

        <tr>
            <td>
                <p>Prix d'acquisition :</p>
            </td>
            <td>
                <p>{{ app.session.get('finance').purchasePrice|number_format(2, ',', ' ') }} €</p>
            </td>
        </tr>

        <tr>
            <td>
                <p>Frais de notaire :</p>
            </td>
            <td>
                <p>{{ app.session.get('finance').notaryFees|number_format(2, ',', ' ') }} €</p>
            </td>
        </tr>

        <tr>
            <td>
                <p>Autres frais d'acquisition :</p>
            </td>
            <td>
                <p>{{ app.session.get('finance').otherFeesAcquisition|number_format(2, ',', ' ') }} €</p>
            </td>
        </tr>

        <tr>
            <td>
                <p>Montant total de l'acquisition :</p>
            </td>
            <td>
                <p>{% set totalAmount = app.session.get('finance').purchasePrice + app.session.get('finance').notaryFees + app.session.get('finance').otherFeesAcquisition %}
                    {{ totalAmount|number_format(2, ',', ' ') }} €</p>
            </td>
        </tr>

        <tr>
            <td class="bg-secondary highlight">
                <p>Votre avantage fiscal :</p>
            </td>
            <td class="bg-secondary highlight">
                <p> {{ resultTaxBenefit|number_format(2, ',', ' ') }} €</p>
            </td>
        </tr>
    </table>
</div>
