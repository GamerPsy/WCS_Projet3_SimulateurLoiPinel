{% extends 'layoutAdmin.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <h1 class="bg-primary">Liste des utilisateurs</h1>

    <div class="container-fluid">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>E-mail</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Rôles</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{% if "ROLE_ADMIN" in user.roles %}Administrateur
                        {% else %}Utilisateur
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('user_edit', {'id': user.id}) }}" title="Editer l'utilisateur"><i
                                    class="fas fa-user-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucun utilisateur</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="d-flex justify-content-center">
            <a class="btn btn-primary" href="{{ path('user_new') }}"><i class="fas fa-user-plus"></i>
                Ajouter un utilisateur
            </a>
        </div>

    </div>
{% endblock %}
